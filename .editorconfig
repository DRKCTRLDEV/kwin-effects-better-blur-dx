# EditorConfig - https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cpp,h,hpp}]
indent_size = 4

[*.{cmake,txt}]
indent_size = 4

[CMakeLists.txt]
indent_size = 4

[*.{json,xml,ui,kcfg,kcfgc,qrc}]
indent_size = 4

[*.{sh,bash}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.nix]
indent_size = 2

[Makefile]
indent_style = tab
